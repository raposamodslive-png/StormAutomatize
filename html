const titleText = "Storm Automatize";
const titleElement = document.getElementById("title");
let charIndex = 0;
let isDeleting = false;
const typingDelay = 150;
const deletingDelay = 50;
const newTextDelay = 4000;
let currentTab = 'recent';
let donationsData = [];

const owners = [
