const fetchWithFallback = async (url, fallbackUrl, options = {}) => {
    const fetchJson = async (targetUrl) => {
        const res = await fetch(targetUrl, options).catch(() => null);
        return res?.ok ? res.json().catch(() => null) : null;
    };

    return (await fetchJson(url)) || (await fetchJson(fallbackUrl)) || {};
};

const typeTitle = () => {
    const currentText = titleElement.textContent;
    
    if (!isDeleting && charIndex < titleText.length) {
        titleElement.textContent = titleText.substring(0, charIndex + 1);
        charIndex++;
        setTimeout(typeTitle, typingDelay);
    } else if (isDeleting && charIndex > 0) {
        titleElement.textContent = titleText.substring(0, charIndex - 1);
        charIndex--;
        setTimeout(typeTitle, deletingDelay);
    } else if (charIndex === titleText.length) {
        isDeleting = true;
        setTimeout(typeTitle, newTextDelay);
    } else if (charIndex === 0) {
        isDeleting = false;
        setTimeout(typeTitle, typingDelay);
    }
};

const showNotification = () => {
    const notification = document.getElementById("donation-notification");
    notification.classList.add("show");
    
    setTimeout(() => {
        notification.classList.add("hide");
        notification.classList.remove("show");
        setTimeout(() => {
            notification.classList.remove("hide");
            notification.style.right = "-350px";
        }, 500);
    }, 15000);
};

