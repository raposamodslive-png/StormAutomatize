};

const copyScript = (platform) => {
    const scripts = {
        'Khan Academy': "javascript:fetch(\"https://raw.githubusercontent.com/Niximkk/Khanware/refs/heads/main/Khanware.js\").then(t=>t.text()).then(eval);",
    };

    const scriptToClone = scripts[platform];
    const tempElement = document.createElement("textarea");
    
    tempElement.value = scriptToClone;
    document.body.appendChild(tempElement);
    tempElement.select();
    document.execCommand("copy");
    document.body.removeChild(tempElement);

    const donationNotification = document.getElementById("donation-notification");
    
    if (donationNotification.classList.contains("show")) {
        dismissNotification();
        setTimeout(() => showCopyNotification(platform), 300);
    } else {
        showCopyNotification(platform);
    }
};

const showCopyNotification = (platform) => {
    const notification = document.getElementById("copy-notification");
    const message = notification.querySelector(".notification-message");
    
    message.textContent = `Script para ${platform} copiado com sucesso! Adicione nos favoritos do navegador para executar.`;
    notification.style.right = "-350px";
    notification.style.opacity = "0";
    notification.classList.remove("hide");
    
    void notification.offsetWidth;

    setTimeout(() => {
        notification.style.right = "20px";
        notification.style.opacity = "1";
        notification.classList.add("show");
        setTimeout(dismissCopyNotification, 4000);
    }, 100);
};

const dismissCopyNotification = () => {
    const notification = document.getElementById("copy-notification");
    notification.classList.add("hide");
    notification.classList.remove("show");
    
    setTimeout(() => {
        notification.classList.remove("hide");
        notification.style.right = "-350px";
        notification.style.opacity = "0";
    }, 500);
};

const openUserModal = (userId, userName, avatarUrl) => {
    const modal = document.getElementById('user-modal');
    const modalName = document.getElementById('modal-name');
    const modalStory = document.getElementById('modal-story');
    const modalAvatar = document.getElementById('modal-avatar');

    modalName.textContent = userName;
    modalAvatar.src = avatarUrl;
    modalStory.textContent = userStories[userId]?.story;

    modal.style.display = 'block';
    setTimeout(() => modal.classList.add('show'), 10);
};

const closeUserModal = () => {
    const modal = document.getElementById('user-modal');
    modal.classList.remove('show');
    setTimeout(() => modal.style.display = 'none', 300);
};

const cleanAvatarCache = (maxAgeInDays = 7) => {
    const currentTime = Date.now();
    const cacheKey = 'avatar_cache_timestamp';
    const lastCleanTime = localStorage.getItem(cacheKey);

    if (lastCleanTime && (currentTime - parseInt(lastCleanTime) < maxAgeInDays * 24 * 60 * 60 * 1000)) return;

    Object.keys(localStorage)
        .filter(key => key.startsWith('discord_avatar_'))
        .forEach(key => localStorage.removeItem(key));

    localStorage.setItem(cacheKey, currentTime.toString());
};

const fetchDiscordAvatar = async (userId) => {
    const cachedAvatar = localStorage.getItem(`discord_avatar_${userId}`);
    if (cachedAvatar) return cachedAvatar;

    try {
        const data = await fetchWithFallback(
            `https://dnext-api.vercel.app/api/discord/user/${userId}`,
            `https://dnext-apii.vercel.app/api/discord/user/${userId}`
        );

        if (data?.avatar?.link) {
            const avatarUrl = `${data.avatar.link}.png?size=2048`;
            localStorage.setItem(`discord_avatar_${userId}`, avatarUrl);
            return avatarUrl;
        }
        return null;
    } catch (error) {
        return null;
    }
};

const createCreditCard = async (userId, userName) => {
    const creditCard = document.createElement("div");
    creditCard.className = "credit-card";
    creditCard.setAttribute("data-aos", "zoom-in");
    creditCard.setAttribute("data-user-id", userId);

    const loadingDiv = document.createElement("div");
    loadingDiv.className = "loading-spinner";
    const spinner = document.createElement("div");
    spinner.className = "spinner";
    loadingDiv.appendChild(spinner);
    creditCard.appendChild(loadingDiv);

    const nameDiv = document.createElement("div");
    nameDiv.className = "credit-name";
    nameDiv.textContent = userName;
    creditCard.appendChild(nameDiv);

    const avatarUrl = await fetchDiscordAvatar(userId);
    creditCard.removeChild(loadingDiv);

    const img = document.createElement("img");
    img.className = "credit-img";
    img.alt = userName;
    img.src = avatarUrl || "https://cdn.discordapp.com/embed/avatars/0.png";
    creditCard.insertBefore(img, nameDiv);

    creditCard.addEventListener('click', () => openUserModal(userId, userName, img.src));
    return creditCard;
};

const loadCreditCards = async () => {
    const containers = [
        { users: owners, id: "owners-container" },
        { users: coLeaders, id: "coleaders-container" },
        { users: managers, id: "managers-container" }
    ];

    for (const { users, id } of containers) {
        const container = document.getElementById(id);
        for (const user of users) {
            const card = await createCreditCard(user.id, user.name);
            container.appendChild(card);
        }
    }
};

const formatarData = (dataString) => {
    const data = new Date(dataString);
    const agora = new Date();
    const diffMilissegundos = agora - data;
    const diffMinutos = Math.floor(diffMilissegundos / (1000 * 60));
    const diffHoras = Math.floor(diffMinutos / 60);
    const diffDias = Math.floor(diffHoras / 24);

    if (diffMinutos < 1) return "agora mesmo";
    if (diffMinutos < 60) return `há ${diffMinutos} ${diffMinutos === 1 ? 'minuto' : 'minutos'}`;
    if (diffHoras < 24) return `há ${diffHoras} ${diffHoras === 1 ? 'hora' : 'horas'}`;
    if (diffDias < 30) return `há ${diffDias} ${diffDias === 1 ? 'dia' : 'dias'}`;
    
    const dia = data.getDate().toString().padStart(2, '0');
    const mes = (data.getMonth() + 1).toString().padStart(2, '0');
    const ano = data.getFullYear();
    return `${dia}/${mes}/${ano}`;
};

const formatarValor = (valor) => 'R$ ' + valor.toFixed(2).replace('.', ',');

const switchTab = (tab) => {
    currentTab = tab;
    document.querySelectorAll('.donations-tab').forEach(t => t.classList.remove('active'));
    document.querySelector(`.donations-tab[data-tab="${tab}"]`).classList.add('active');
    renderDonations();
};

const renderDonations = () => {
    const doacoesList = document.getElementById('donations-list');
    
    if (donationsData.length === 0) {
        doacoesList.innerHTML = '<div class="donations-empty">Nenhuma doação encontrada.</div>';
        return;
    }

    doacoesList.innerHTML = '';
    currentTab === 'recent' ? renderRecentDonations(doacoesList) : renderRankingDonations(doacoesList);
};

const renderRecentDonations = (container) => {
    donationsData.slice(0, 5).forEach(doacao => {
        const doacaoItem = document.createElement('div');
        doacaoItem.className = 'donation-item';
        doacaoItem.innerHTML = `
            <div class="donation-header">
                <div class="donation-name">${doacao.donatorNickname}</div>
                <div class="donation-amount">${formatarValor(doacao.totalAmount)}</div>
            </div>
            <div class="donation-message">${doacao.donatorMessage}</div>
            <div class="donation-date">${formatarData(doacao.dateCreated)}</div>
        `;
        container.appendChild(doacaoItem);
    });
};

const renderRankingDonations = (container) => {
    const now = new Date();
    const mesAtual = now.getMonth();
    const anoAtual = now.getFullYear();

    const doacoesMes = donationsData
        .filter(doacao => {
            const data = new Date(doacao.dateCreated);
            return data.getMonth() === mesAtual && data.getFullYear() === anoAtual;
        })
        .sort((a, b) => b.totalAmount - a.totalAmount)
        .slice(0, 5);

    if (doacoesMes.length === 0) {
        container.innerHTML = '<div class="donations-empty">Nenhuma doação este mês.</div>';
        return;
    }

    doacoesMes.forEach((doacao, index) => {
        const doacaoItem = document.createElement('div');
        doacaoItem.className = `donation-item rank-${index + 1}`;
        doacaoItem.innerHTML = `
            <div class="donation-rank">
                <div class="rank-number">${index + 1}</div>
                <div class="donation-name">${doacao.donatorNickname}</div>
                <div class="donation-amount">${formatarValor(doacao.totalAmount)}</div>
            </div>
            <div class="donation-message">${doacao.donatorMessage}</div>
            <div class="donation-date">${formatarData(doacao.dateCreated)}</div>
        `;
        container.appendChild(doacaoItem);
    });
};

const carregarDoacoes = async () => {
    const doacoesList = document.getElementById('donations-list');
    doacoesList.innerHTML = '<div class="donation-loading"><div class="spinner"></div><span>Carregando doações...</span></div>';

    try {
        donationsData = await fetchWithFallback(
            'https://dnext-api.vercel.app/api/pixgg/donations',
            'https://dnext-apii.vercel.app/api/pixgg/donations'
        );
        renderDonations();
    } catch (error) {
        doacoesList.innerHTML = '<div class="donations-empty">Erro ao carregar doações. Tente novamente mais tarde.</div>';
    }
};

const initializeSite = () => {
    setTimeout(carregarDoacoes, 1500);
    setInterval(carregarDoacoes, 120000);
    setTimeout(typeTitle, 1000);
    setTimeout(showOptimizationNotification, 1000);
    setTimeout(showNotification, 16000);
    
    loadCreditCards();
    cleanAvatarCache();

    AOS.init({
        duration: 800,
        easing: "ease",
        once: false,
        mirror: false,
    });

    document.querySelector('.close-modal')?.addEventListener('click', closeUserModal);

    window.addEventListener('click', (event) => {
        const modal = document.getElementById('user-modal');
        if (event.target === modal) closeUserModal();
    });

    document.addEventListener('keydown', (event) => {
        if (event.key === 'Escape') closeUserModal();
    });

    document.querySelectorAll('.donations-tab').forEach(tab => {
        tab.addEventListener('click', () => switchTab(tab.dataset.tab));
    });

    document.addEventListener('contextmenu', (e) => e.preventDefault());
    applyIconColors();
};

setTimeout(initializeSite, 100);
</script>
</body>
</html>